{
  "name": "@pdfme/ui",
  "version": "0.0.0",
  "sideEffects": false,
  "author": "hand-dot",
  "license": "MIT",
  "keywords": [
    "pdf",
    "pdf-generation",
    "pdf-designer",
    "pdf-viewer",
    "typescript",
    "react"
  ],
  "description": "TypeScript base PDF generator and React base UI. Open source, developed by the community, and completely free to use under the MIT license!",
  "homepage": "https://pdfme.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:pdfme/pdfme.git"
  },
  "bugs": {
    "url": "https://github.com/pdfme/pdfme/issues"
  },
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/types/src/index.d.ts",
  "scripts": {
    "dev": "npm-run-all --parallel devBuild:watch devBuildType:watch",
    "devBuild:watch": "esbuild src/index.ts --bundle --outfile=dist/index.es.js --format=esm --watch",
    "devBuildType:watch": "tsc --emitDeclarationOnly --watch",
    "build": "vite build && tsc --emitDeclarationOnly",
    "clean": "rimraf dist",
    "lint": "eslint --ext .ts,.tsx src --config eslint.config.mjs",
    "test": "vitest run",
    "prune": "ts-prune src",
    "prettier": "prettier --write 'src/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@pdfme/converter": "workspace:*",
    "@scena/react-guides": "^0.28.2",
    "antd": "^6.0.1",
    "dompurify": "^3.2.7",
    "form-render": "^2.5.6",
    "globrex": "^0.1.2",
    "hotkeys-js": "^3.13.15",
    "lucide-react": "^0.555.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-moveable": "^0.56.0",
    "react-refresh": "^0.18.0",
    "react-selecto": "^1.12.0"
  },
  "devDependencies": {
    "@pdfme/common": "workspace:*",
    "@pdfme/schemas": "workspace:*",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/dompurify": "^3.2.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@ungap/structured-clone": "^1.3.0",
    "@vitejs/plugin-react": "^5.1.1",
    "csstype": "^3.1.2",
    "esbuild": "^0.27.0",
    "is-path-inside": "^4.0.0",
    "postcss": "^8.5.6",
    "process": "^0.11.10",
    "rollup": "^4.44.1",
    "vite": "^7.1.7",
    "vite-plugin-css-injected-by-js": "^3.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest-canvas-mock": "^1.1.3"
  },
  "peerDependencies": {
    "@pdfme/common": "workspace:*",
    "@pdfme/schemas": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  }
}
